# Maintainer: wangyifan <wangyifan@acoinfo.com>

pkgname=amr-git
pkgver=0.0.1.r1.ac53cc
pkgrel=1
pkgdesc='A simple download client of armory.'
arch=(any)
url='http://10.13.42.54:3000/ivan/amr'
license=(MIT)
provides=("${pkgname%-git}")
source=(git+${url}.git)
sha1sums=('SKIP')

pkgver() {
  cd "${pkgname%-git}"
  printf "%s.r%s.%s" \
    "$(git describe --tag --abbrev=0 | sed 's/^v//')" \
    "$(git rev-list --count HEAD)" \
    "$(git rev-parse --short=6 HEAD)"
}

build() {
  cd "${pkgname%-git}"
  go build
}

package() {
  cd "${pkgname%-git}"
  install -Dm755 ${pkgname%-git} -t "${pkgdir}/usr/bin/"
}

