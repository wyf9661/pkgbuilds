# Contributor: chengsiyuan <chengsiyuan@acoinfo.com>

pkgname=sylixos-uploader-git
pkgver=v0.0.5.r17.21d95ba3
pkgrel=1
pkgdesc='A command-line tool for uploading SylixOS projects via CORBA.'
arch=(any)
url='https://cdn.git.acosail.cc/go-sylixos/sylixos-uploader.git'
license=(MIT)
provides=("${pkgname}")
source=(git+${url})
sha256sums=('SKIP')

pkgver() {
  cd "${pkgname%-git}"

  # Get the version number.
  printf "%s.r%s.%s" \
    "$(git describe --tags --abbrev=0)" \
    "$(git rev-list --count HEAD)" \
    "$(git rev-parse --short=8 HEAD)"
}

build() {
  cd "${pkgname%-git}"
  ./build.sh
}

package() {
  cd "${pkgname%-git}"
  install -Dm755 ${pkgname%-git}-linux* "${pkgdir}/usr/bin/${pkgname%-git}"
}

